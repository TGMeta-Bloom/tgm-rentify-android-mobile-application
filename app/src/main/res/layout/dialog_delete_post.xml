<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/app_blue"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete this post?"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Now"
            android:textColor="@color/black"
            android:backgroundTint="@color/bright_yellow"
            app:cornerRadius="20dp"
            android:layout_marginBottom="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/black"
            android:backgroundTint="@color/bright_yellow"
            app:cornerRadius="20dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>