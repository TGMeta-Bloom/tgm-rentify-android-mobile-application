<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.tgmrentify.view.TenantFeedFragment"
        android:label="Home"
        tools:layout="@layout/fragment_router_container">
        <action
            android:id="@+id/action_feedFragment_to_addPostFragment"
            app:destination="@id/addPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.tgmrentify.view.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_router_container">
        <action
            android:id="@+id/action_feedFragment_to_addPostFragment"
            app:destination="@id/addPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/myPostsFragment"
        android:name="com.example.tgmrentify.view.MyPostsFragment"
        android:label="My Posts"
        tools:layout="@layout/fragment_my_posts" />

    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.tgmrentify.view.AddPostFragment"
        android:label="Add Post"
        tools:layout="@layout/fragment_add_post" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.tgmrentify.view.ProfileFragment"
        android:label="Profile" />
</navigation>